@model AccountIndexViewModel
@{
    ViewData["Title"] = "Index";
}
@{
    // TODO 03 (View): Create the Index View to show the user Information about the user account
}

<h2>Welcome @Model.User.Username</h2>

<h5>Preferences</h5>
<form asp-controller="Account" asp-action="Index">
    @if (Model.User.TempPref == "F")
    {
        <div class="field-container">
            <input asp-for="TempPref" type="radio" value="F" checked>
            <label asp-for="TempPref" class="btn">°F</label>
        </div>
        <div class="field-container">
            <input asp-for="TempPref" type="radio" value="C">
            <label asp-for="TempPref" class="btn">°C</label>
        </div>
    }
    else
    {
        <div class="field-container">
            <input asp-for="TempPref" type="radio" value="F">
            <label asp-for="TempPref" class="btn">°F</label>
        </div>
        <div class="field-container">
            <input asp-for="TempPref" type="radio" value="C" checked>
            <label asp-for="TempPref" class="btn">°C</label>
        </div>
    }
    <div class="form-button">
        <input type="submit" value="Save Changes" class="btn btn-success" />
    </div>
</form>
