<h2>@Model</h2>

<h5>Preferences</h5>
<form asp-controller="Account" asp-action="Index">
    <input id="toggle-on" class="toggle toggle-left" asp-for="TempPref" type="radio" value="F" checked>
    <label for="toggle-on" class="btn">°F</label>
    <input id="toggle-off" class="toggle toggle-right" asp-for="TempPref" type="radio" value="C">
    <label for="toggle-off" class="btn">°C</label>
    <input type="submit" />
</form>
