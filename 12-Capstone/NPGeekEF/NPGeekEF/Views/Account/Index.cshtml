<h2>@Model.Username</h2>

<h5>Preferences</h5>
<form asp-controller="Account" asp-action="Index">
    <input id="toggle-on" class="toggle toggle-left" name="toggle" value="" type="radio" checked>
    <label for="toggle-on" class="btn">Yes</label>
    <input id="toggle-off" class="toggle toggle-right" name="toggle" value="true" type="radio">
    <label for="toggle-off" class="btn">No</label>
    <input type="submit" />
</form>
