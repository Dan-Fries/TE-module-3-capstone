@model RegisterViewModel

@{
    ViewData["Title"] = "Register";


    // TODO 05 (View): Create the Registration view
}

<h2>Register</h2>
<form asp-controller="account" asp-action="register" method="post">
    <div class="field-container">
        <label class="form-label" asp-for="Email">Email: </label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="error"></span>
    </div>
    <div class="field-container">
        <label class="form-label" asp-for="Password">Password: </label>
        <input class="form-control" type="password" asp-for="Password" />
        <span asp-validation-for="Password" class="error"></span>
    </div>
    <div class="field-container">
        <label class="form-label" asp-for="ConfirmPassword">Confirm Password: </label>
        <input class="form-control" type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="error"></span>
    </div>
    <div class="form-button">
        <input type="submit" value="Register" class="btn btn-success" />
    </div>
</form>