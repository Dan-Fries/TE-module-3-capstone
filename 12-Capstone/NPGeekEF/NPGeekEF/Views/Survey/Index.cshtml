@model SurveyViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Daily Survey</h1>

<form asp-controller="Survey" asp-action="Index" method="post">
    <div class="field-container">
        <label class="form-label" asp-for="ParkCode">Favorite Park: </label>
        <select class="form-control" asp-for="ParkCode" asp-items="Model.parkCodes"></select>
        <span asp-validation-for="ParkCode" class="error"></span>
    </div>
    <div class="field-container">
        <label class="form-label" asp-for="Email">Email Address: </label>
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="error"></span>
    </div>
    <div class="field-container">
        <label class="form-label" asp-for="State">State of Residence: </label>
        <select class="form-control" asp-for="State" asp-items="Model.stateCodes"></select>
        <span asp-validation-for="State" class="error"></span>
    </div>
    <div class="field-container">
        <label class="form-label" asp-for="ActivityLevel">State of Residence: </label>
        <select class="form-control" asp-for="ActivityLevel" asp-items="Model.activityLevels"></select>
        <span asp-validation-for="State" class="error"></span>
    </div>
    <div class="form-button">
        <input type="submit" value="Submit" class="btn btn-primary" />
    </div>

</form>

